{
    "name": "korowai/ldaplib",
    "description": "Korowai LDAP component",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "PaweÅ‚ Tomulik",
            "email": "ptomulik@meil.pw.edu.pl"
        }
    ],
    "suport": {
      "issues": "https://github.com/korowai/framework/issues",
      "source": "https://github.com/korowai/framework"
    },
    "require": {
        "php": ">=7.1.3",
        "ext-ldap": "*",
        "symfony/options-resolver": ">=4.2",
        "korowai/errorlib": "*",
        "korowai/contextlib": "*"
    },
    "autoload": {
      "psr-4" : {
        "Korowai\\Lib\\Ldap\\" : "src/Korowai/Lib/Ldap"
      },
      "exclude-from-classmap": [
        "/Tests/",
        "/Behat/",
        "/Resources/"
      ]
    },
    "autoload-dev": {
      "psr-4" : {
        "Korowai\\Lib\\Ldap\\Tests\\" : "Tests/",
        "Korowai\\Lib\\Ldap\\Behat\\" : "Behat/"
      }
    }
}
